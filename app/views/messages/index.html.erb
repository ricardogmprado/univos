
<%= render 'shared/navbar' %>


<div class="container chat-container">
  <div class="chatContent">
  <% @activity.messages.each do |message| %>

    <% if message.user == current_user %>
      <div class="user_name text-right">
        <%= message.user.name %>
      </div>
      <div class="chat-column company">
        <div class="item">
          <div class="chat-message text-right"><%= message.content %>
          </div>
          <div class="message-date text-right"><%= message.created_at.strftime("%b %e, %l:%M %p") %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="user_name text-left">
        <%= message.user.name %>
      </div>
        <div class="chat-column customer">
          <div class="item">
            <div class="chat-message text-left"><%= message.content %>

            </div>
            <div class="message-date text-left"><%= message.created_at.strftime("%b %e, %l:%M %p") %>

            </div>
          </div>
        </div>
    <% end %>


