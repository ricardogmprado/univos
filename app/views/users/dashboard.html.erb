
<%= render 'shared/navbar' %>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="saved-tab" data-toggle="tab" href="#saved" role="tab" aria-controls="saved" aria-selected="true">Saved</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="Joining-tab" data-toggle="tab" href="#joining" role="tab" aria-controls="joining" aria-selected="false">Joining</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="created-tab" data-toggle="tab" href="#created" role="tab" aria-controls="created" aria-selected="false">Created by you</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="saved" role="tabpanel" aria-labelledby="saved-tab"><% @saved_appointments.each do |appointment| %>
  <div class="card-activity">
      <img src="<%= cl_image_path appointment.activity.photo %> ">
      <div class="card-activity-infos">
        <div class="card-activity-infos-details">
          <h5><%= appointment.activity.title %></h5>
          <p><%= appointment.activity.date.to_date %></p>
        </div>
        <div class="card-activity-buttons">
        <%= link_to "Confirm", activity_appointment_path(id: appointment.id, activity_id: appointment.activity.id, status: 'confirmed'), method: :patch, class: 'btn btn-outline-primary'%>
        <%= link_to "Decline", activity_appointment_path(id: appointment.id, activity_id: appointment.activity.id, status: 'declined'), method: :patch, class: 'btn btn-outline-primary'%>
        </div>
      </div>
    </div>
  </div>
      <% end %>
  <div class="tab-pane fade" id="joining" role="tabpanel" aria-labelledby="joining-tab"><% @confirmed_activities.each do |activity| %>
    <div class="card-activity">
       <img src="<%= cl_image_path activity.photo %> ">
       <div class="card-activity-infos">
          <div class="card-activity-infos-details">
            <h5><%= link_to "#{activity.title}", activity_path(activity) %></h5>
          </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="tab-pane fade" id="created" role="tabpanel" aria-labelledby="created-tab"><% @created_activities.each do |activity| %>
    <div class="card-activity">
      <img src="<%= cl_image_path activity.photo %> ">
      <div class="card-activity-infos">
          <div class="card-activity-infos-details">
            <h5><%= link_to "#{activity.title}", activity_path(activity) %></h5>
          </div>
          <div class="card-activity-buttons">
            <%= link_to "Delete", activity_path(activity), method: :delete, class: 'btn btn-outline-danger', data: {confirm: "Are you sure?"}  %>
          </div>
      </div>
  </div>
</div>
<% end %>

<%= link_to "Browse Activities", activities_path, class: 'btn btn-outline-primary' %>

