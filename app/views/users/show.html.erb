<%= link_to "Go to Dashboard", dashboard_path, class: 'btn btn-outline-primary' %>
<% if @user == current_user %>
  <%= link_to "Edit your profile", edit_user_registration_path, class: "btn btn-outline-secondary ml-3" %>
<% end %>

<div class="user-profile"><%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %></div>

<ul>
  <li><%= @user.name %></li>
  <li><%= @user.gender %></li>
  <li><%= @user.age %></li>
  <li><%= @user.avatar %></li>
</ul>

